<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HRDemoActivity"
    android:baselineAligned="true"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="Sensor Data Display"
        android:id="@+id/title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sensor 1"
            android:id="@+id/SensorLabel1"
            android:layout_weight="0"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sensor 2"
            android:id="@+id/SensorLabel2"
            android:layout_weight="0"
            android:layout_gravity="left"
            android:layout_below="@+id/angle1"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar1"
            android:layout_gravity="right"
            android:layout_above="@+id/SensorLabel2"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/SensorLabel1"
            android:layout_toEndOf="@+id/SensorLabel1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="N/A"
            android:id="@+id/angle1"
            android:layout_below="@+id/SensorLabel1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="N/A"
            android:id="@+id/angle2"
            android:layout_weight="0"
            android:layout_below="@+id/SensorLabel2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="N/A"
            android:id="@+id/angle3"
            android:layout_weight="0"
            android:layout_below="@+id/sensorLable3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sensor 3"
            android:id="@+id/sensorLable3"
            android:layout_weight="0"
            android:layout_gravity="left"
            android:layout_below="@+id/angle2"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Adjust"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_gravity="right"
            android:layout_below="@+id/SensorLabel2"
            android:layout_alignEnd="@+id/progressBar1"
            android:layout_above="@+id/sensorLable3"
            android:layout_toEndOf="@+id/SensorLabel2"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar3"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/angle3"
            android:layout_toEndOf="@+id/sensorLable3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Battery Level: 0%"
            android:id="@+id/batt1"
            android:layout_above="@+id/progressBar1"
            android:layout_alignEnd="@+id/progressBar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Battery Level: 0%"
            android:id="@+id/batt2"
            android:layout_above="@+id/progressBar2"
            android:layout_alignEnd="@+id/progressBar2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Battery Level: 0%"
            android:id="@+id/batt3"
            android:layout_alignBottom="@+id/sensorLable3"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Status: Offline"
            android:id="@+id/status1"
            android:layout_above="@+id/progressBar1"
            android:layout_toStartOf="@+id/batt1"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Status: Offline"
            android:id="@+id/status2"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_above="@+id/progressBar2"
            android:layout_alignStart="@+id/status3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Status: Offline"
            android:id="@+id/status3"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignTop="@+id/batt3"
            android:layout_toStartOf="@+id/batt3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ref: N/A"
            android:id="@+id/refLabel"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/angle1"
        android:layout_weight="0" />


</LinearLayout>